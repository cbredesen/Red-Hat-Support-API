<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema elementFormDefault="qualified" version="1.0" targetNamespace="http://www.redhat.com/gss/strata"
	xmlns:tns="http://www.redhat.com/gss/strata" xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:annotation>
		<xs:documentation>Red Hat Support Services API</xs:documentation>
	</xs:annotation>

	<xs:element name="cases">
		<xs:complexType>
			<xs:annotation>
				<xs:documentation>A list of support cases. This type serves as both a
					top-level construct in the case that a query returns a list of
					support cases as well as an embedded construct as part of a larger
					item.  This element is not required to contain any child 
					case elements.</xs:documentation>
			</xs:annotation>
			<xs:sequence>
				<xs:element ref="tns:case" maxOccurs="unbounded" />
			</xs:sequence>
			<xs:attribute name="length" type="xs:int" use="required" />
		</xs:complexType>
	</xs:element>

	<xs:element name="case">
		<xs:complexType>
			<xs:annotation>
				<xs:documentation>A support case as viewed by an internal customer.</xs:documentation>
			</xs:annotation>
			<xs:sequence>
				<xs:element name="uri" type="xs:anyURI" minOccurs="0">
					<xs:annotation>
						<xs:documentation>RESTful URI for this case resource.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="summary" type="xs:string" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Title or short summary.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="description" type="xs:string" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Description of the problem or question.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="status" type="xs:string" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Case status.  Valid values are available from 
						the values service.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="product" type="xs:string" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Product this case relates to.  Valid products 
						are available from the values service.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="component" type="xs:string" minOccurs="0" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Component this case relates to (optional). Valid
						components for a given product are available from the values 
						service.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="version" type="xs:string" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Version of the product this case relates to.
						Valid versions for a given product are available from the values
						service.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="type" type="xs:string" minOccurs="0" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Type of case, i.e. question, problem, etc.
						Valid types are available from the values service.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="accountNumber" type="xs:string" minOccurs="1" maxOccurs="1">
					<xs:annotation>
						<xs:documentation>Account number this case belongs to.</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="createdBy" type="xs:string" minOccurs="0" />
				<xs:element name="createdDate" type="xs:dateTime" minOccurs="0" />
				<xs:element name="lastModifiedBy" type="xs:string" minOccurs="0" />
				<xs:element name="lastModifiedDate" type="xs:dateTime" minOccurs="0" />
				<xs:element name="reference" type="xs:string" minOccurs="0" />
				<xs:element name="notes" type="xs:string" minOccurs="0" />
				<xs:element name="isEscalated" type="xs:boolean" minOccurs="0" />
				<xs:element name="contactName" type="xs:string" minOccurs="0" />
				<xs:element name="origin" type="xs:string" minOccurs="0" />
				<xs:element name="owner" type="xs:string" minOccurs="0" />
				<xs:element name="internalPriority" type="xs:string" minOccurs="0" />
				<xs:element name="internalStatus" type="xs:string" minOccurs="0" />
				<xs:element name="suppliedName" type="xs:string" minOccurs="0" />
				<xs:element name="suppliedPhone" type="xs:string" minOccurs="0" />
				<xs:element name="suppliedEmail" type="xs:string" minOccurs="0" />
				<xs:element name="severity" type="xs:string" minOccurs="0" />
				<xs:element ref="tns:comments" minOccurs="0" />
			</xs:sequence>
			<xs:attribute name="caseNumber" type="xs:string" use="optional" />
			<xs:attribute name="isClosed" type="xs:boolean" use="optional" />
			<xs:attribute name="customerReferenceNumber" type="xs:string" use="optional" />
		</xs:complexType>
	</xs:element>

	<xs:element name="comments">
		<xs:complexType>
			<xs:annotation>
				<xs:documentation>A list of comments</xs:documentation>
			</xs:annotation>
			<xs:sequence>
				<xs:element ref="tns:comment" minOccurs="0" maxOccurs="unbounded" />
			</xs:sequence>
			<xs:attribute name="length" type="xs:int" use="required" />
		</xs:complexType>
	</xs:element>

	<xs:element name="comment">
		<xs:complexType>
			<xs:annotation>
				<xs:documentation>A support case comment and associated metadata.</xs:documentation>
			</xs:annotation>
			<xs:sequence>
				<xs:element name="date" type="xs:dateTime" />
				<xs:element name="who" type="xs:string" minOccurs="0" />
				<xs:element name="text" type="xs:string" />
				<xs:element name="title" type="xs:string" minOccurs="0" />
				<xs:element name="lastModified" type="xs:date" minOccurs="0" />
				<xs:element name="lastModifiedBy" type="xs:string" minOccurs="0" />
				<xs:element name="createdDate" type="xs:date" minOccurs="0" />
				<xs:element name="createdBy" type="xs:string" minOccurs="0" />
				<xs:element name="uri" type="xs:anyURI" minOccurs="0" />
			</xs:sequence>
			<xs:attribute name="id" type="xs:string" />
			<xs:attribute name="caseNumber" type="xs:string" use="required" />
		</xs:complexType>
	</xs:element>

	<xs:element name="values">
		<xs:complexType>
			<xs:annotation>
				<xs:documentation>A list of name/value pairs.  Both names and values are String typed.  List can 
				contain zero or more elements.  Values are nullable.</xs:documentation>
			</xs:annotation>
			<xs:sequence>
				<xs:element name="value" minOccurs="0" maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="name" type="xs:string" minOccurs="1" maxOccurs="1"/>
							<xs:element name="value" type="xs:string" minOccurs="0" maxOccurs="1" />
						</xs:sequence>
						<xs:attribute name="type" type="xs:string" />
					</xs:complexType>
				</xs:element>
			</xs:sequence>
			<xs:attribute name="length" type="xs:int" use="required" />
		</xs:complexType>
	</xs:element>

</xs:schema>